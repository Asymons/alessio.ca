---
// GradientBox component - Animated gradient decoration with terminal aesthetic
// Smooth color transitions for visual interest
---

<div class="gradient-box">
	<div class="gradient-background"></div>
	<div class="terminal-overlay">
		<div class="code-line">$ npm run dev</div>
		<div class="code-line">$ npm test</div>
		<div class="code-line">$ git commit -m "feat: new feature"</div>
		<div class="code-line">$ git push origin feature-branch</div>
		<div class="code-line">$ gh pr create --fill</div>
		<div class="code-line">$ git checkout main && git merge --ff-only</div>
	</div>
</div>

<style>
	.gradient-box {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		overflow: hidden;
		border-radius: inherit;
	}

	.gradient-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			135deg,
			oklch(0.45 0.12 270 / 0.25),
			oklch(0.50 0.14 300 / 0.30),
			oklch(0.48 0.13 240 / 0.25),
			oklch(0.46 0.12 280 / 0.28)
		);
		background-size: 200% 200%;
		animation: gradient-shift 15s ease-in-out infinite;
		opacity: 0.5;
	}

	@keyframes gradient-shift {
		0%, 100% {
			background-position: 0% 50%;
		}
		25% {
			background-position: 100% 50%;
		}
		50% {
			background-position: 100% 100%;
		}
		75% {
			background-position: 0% 100%;
		}
	}

	.terminal-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: center;
		padding: 3rem 2rem;
		gap: 0.75rem;
		overflow: hidden;
		font-family: var(--font-mono);
		font-size: 0.875rem;
		opacity: 0.6;
		pointer-events: none;
	}

	.code-line {
		color: oklch(0.70 0.15 270);
		white-space: nowrap;
		animation: fade-in-sequence 20s ease-in-out infinite;
		opacity: 0;
	}

	.code-line:nth-child(1) {
		animation-name: fade-line-1;
	}

	.code-line:nth-child(2) {
		animation-name: fade-line-2;
	}

	.code-line:nth-child(3) {
		animation-name: fade-line-3;
	}

	.code-line:nth-child(4) {
		animation-name: fade-line-4;
	}

	.code-line:nth-child(5) {
		animation-name: fade-line-5;
	}

	.code-line:nth-child(6) {
		animation-name: fade-line-6;
	}

	/* Line 1: fade in at 0s, visible until 15s, fade out 15s-17s */
	@keyframes fade-line-1 {
		0% {
			opacity: 0;
			transform: translateY(10px);
		}
		10% {
			opacity: 1;
			transform: translateY(0);
		}
		75% {
			opacity: 1;
			transform: translateY(0);
		}
		85% {
			opacity: 0;
			transform: translateY(-10px);
		}
		100% {
			opacity: 0;
			transform: translateY(-10px);
		}
	}

	/* Line 2: fade in at 2s, visible until 15s, fade out 15s-17s */
	@keyframes fade-line-2 {
		0%, 10% {
			opacity: 0;
			transform: translateY(10px);
		}
		20% {
			opacity: 1;
			transform: translateY(0);
		}
		75% {
			opacity: 1;
			transform: translateY(0);
		}
		85% {
			opacity: 0;
			transform: translateY(-10px);
		}
		100% {
			opacity: 0;
			transform: translateY(-10px);
		}
	}

	/* Line 3: fade in at 4s, visible until 15s, fade out 15s-17s */
	@keyframes fade-line-3 {
		0%, 20% {
			opacity: 0;
			transform: translateY(10px);
		}
		30% {
			opacity: 1;
			transform: translateY(0);
		}
		75% {
			opacity: 1;
			transform: translateY(0);
		}
		85% {
			opacity: 0;
			transform: translateY(-10px);
		}
		100% {
			opacity: 0;
			transform: translateY(-10px);
		}
	}

	/* Line 4: fade in at 6s, visible until 15s, fade out 15s-17s */
	@keyframes fade-line-4 {
		0%, 30% {
			opacity: 0;
			transform: translateY(10px);
		}
		40% {
			opacity: 1;
			transform: translateY(0);
		}
		75% {
			opacity: 1;
			transform: translateY(0);
		}
		85% {
			opacity: 0;
			transform: translateY(-10px);
		}
		100% {
			opacity: 0;
			transform: translateY(-10px);
		}
	}

	/* Line 5: fade in at 8s, visible until 15s, fade out 15s-17s */
	@keyframes fade-line-5 {
		0%, 40% {
			opacity: 0;
			transform: translateY(10px);
		}
		50% {
			opacity: 1;
			transform: translateY(0);
		}
		75% {
			opacity: 1;
			transform: translateY(0);
		}
		85% {
			opacity: 0;
			transform: translateY(-10px);
		}
		100% {
			opacity: 0;
			transform: translateY(-10px);
		}
	}

	/* Line 6: fade in at 10s, visible until 15s, fade out 15s-17s */
	@keyframes fade-line-6 {
		0%, 50% {
			opacity: 0;
			transform: translateY(10px);
		}
		60% {
			opacity: 1;
			transform: translateY(0);
		}
		75% {
			opacity: 1;
			transform: translateY(0);
		}
		85% {
			opacity: 0;
			transform: translateY(-10px);
		}
		100% {
			opacity: 0;
			transform: translateY(-10px);
		}
	}

	@media (prefers-reduced-motion: reduce) {
		.gradient-background {
			animation: none;
			background-position: 0% 50%;
		}

		.code-line {
			animation: none;
			opacity: 0.3;
			transform: translateY(0);
		}
	}
</style>
