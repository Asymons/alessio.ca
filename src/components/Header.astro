---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';

const base = import.meta.env.BASE_URL;
---

<header>
	<nav>
		<a href={base} class="logo" aria-label={SITE_TITLE}>
			<svg class="logo-icon" width="34" height="34" viewBox="0 0 34 34" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M4.5 33.5156H0L14.2266 0H19.0312L33.3281 33.5156H28.5234L24.1875 22.9688H13.1016L14.2969 19.4531H22.7344L16.4766 4.26562L4.5 33.5156Z" fill="currentColor"/>
			</svg>
		</a>
		<div class="nav-links">
			<HeaderLink href={base}>Home</HeaderLink>
			<HeaderLink href={`${base}/blog`}>Blog</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: var(--space-md) var(--space-lg);
		background: var(--color-bg);
		border-bottom: 1px solid var(--color-border-subtle);
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: var(--container-lg);
		margin: 0 auto;
	}

	.logo {
		display: flex;
		align-items: center;
		text-decoration: none;
		transition: transform var(--transition-fast), opacity var(--transition-fast);
	}

	.logo:hover {
		transform: translateY(-2px);
		opacity: 0.8;
	}

	.logo:focus-visible {
		outline: none;
		box-shadow: var(--focus-ring);
		border-radius: var(--radius-sm);
	}

	.logo-icon {
		width: 2rem;
		height: 2rem;
		object-fit: contain;
		color: var(--color-text);
	}

	.nav-links {
		display: flex;
		gap: var(--space-lg);
		align-items: center;
	}

	@media (max-width: 720px) {
		header {
			padding: var(--space-sm) var(--space-md);
		}

		.nav-links {
			gap: var(--space-md);
		}
	}
</style>
